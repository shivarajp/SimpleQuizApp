<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_green_light"
    tools:context=".Resultdis">


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:id="@+id/txtres"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Total No Of Question : "
            android:textSize="25dp"
            android:layout_marginTop="18dp"
            android:id="@+id/noofques"
            android:layout_below="@+id/txtres"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No Of Question Attempted : "
            android:textSize="25dp"
            android:layout_marginTop="18dp"
            android:id="@+id/no_of_att"
            android:layout_below="@+id/noofques"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No Of Question Answered Correctly : "
            android:textSize="25dp"
            android:layout_marginTop="18dp"
            android:id="@+id/noofcorr"
            android:layout_below="@+id/no_of_att"
            android:layout_alignLeft="@+id/no_of_att"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Percentage : "
            android:textSize="25dp"
            android:layout_marginTop="18dp"
            android:id="@+id/per"
            android:layout_below="@+id/noofcorr"
            android:layout_alignLeft="@+id/noofcorr"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Click TO View The Result In Graph"
            android:id="@+id/btngrph"

            android:layout_below="@+id/per"
            android:layout_alignRight="@+id/per"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
     android:orientation="horizontal"
          android:id="@+id/layout1"
            android:layout_below="@+id/btngrph"
            >
    </LinearLayout>


</RelativeLayout>
