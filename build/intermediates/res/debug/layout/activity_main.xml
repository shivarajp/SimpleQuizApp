<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bar Graph"
            android:id="@+id/bargraph"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"

            android:layout_marginTop="27dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Line Graph"
            android:id="@+id/linegraph"
            android:layout_below="@+id/bargraph"


            />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Scatter Graph"
            android:id="@+id/scattergraph"
            android:layout_below="@+id/linegraph"


            />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pie Graph"
            android:id="@+id/Piegraph"
            android:layout_below="@+id/scattergraph"


            />
</RelativeLayout>
