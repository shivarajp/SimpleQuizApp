<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".Quiztest">


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtques"
            android:textColor="@android:color/black"
            android:textSize="40dp"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtques"
            android:layout_alignParentLeft="true"
            android:id="@+id/rdgroup"
            >

    <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Option 1"
            android:textSize="25dp"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/opt1"
            android:layout_below="@+id/txtques"
            android:layout_alignLeft="@+id/txtques"/>
    <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Option 2"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:id="@+id/opt2"
            android:layout_below="@+id/opt1"
            android:layout_alignLeft="@+id/opt1"/>
    <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Option 3"
            android:textSize="25dp"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/opt3"
            android:layout_below="@+id/opt2"
            android:layout_alignLeft="@+id/opt2"/>
    <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Option 4"
            android:textSize="25dp"
            android:maxLines="1"
            android:scrollbars="vertical"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:id="@+id/opt4"
            android:layout_below="@+id/opt3"
            android:layout_alignLeft="@+id/opt3"/>
    </RadioGroup>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btnnext"
          android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rdgroup"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Time Left"
            android:gravity="center"
            android:id="@+id/textView11"
            android:layout_below="@+id/btnnext"
            android:textSize="30dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="80dp"
            android:gravity="center"
            android:id="@+id/timer"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>
